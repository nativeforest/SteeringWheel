<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg1"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <Button
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:text=" Sensor"
            android:id="@+id/btnSimple"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|center" />

        <Button
            android:id="@+id/btnAutoConnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center"
            android:text="Keyboard" />

        <Button
            android:id="@+id/btnListener"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:gravity="center_vertical|center"
            android:text="BluetoothSPP Listener"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btnDeviceList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:text="BluetoothSPP DeviceList"
            android:visibility="invisible" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bluetooth Terminal"
            android:id="@+id/btnTerminal"
            android:gravity="center_vertical|left" />
    </LinearLayout>
</RelativeLayout>
